<Window x:Class="ExampleWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="txtHello" HorizontalAlignment="Center" Height="217" Margin="10,10,10,0" TextWrapping="Wrap" Text="Hello World" VerticalAlignment="Top" Width="497" FontSize="48" TextAlignment="Center"/>
        <Button x:Name="btnChange" Content="Change the Text!" HorizontalAlignment="Left" Height="77" Margin="10,232,0,0" VerticalAlignment="Top" Width="497" Click="btnChange_Click"/>
    </Grid>
</Window>
