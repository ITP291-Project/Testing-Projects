<Window x:Name="Write_App" x:Class="ExampleWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="txtHello" HorizontalAlignment="Center" Height="120" Margin="10,10,10,0" TextWrapping="Wrap" Text="Hello World" VerticalAlignment="Top" Width="497" FontSize="48" TextAlignment="Center"/>
        <Button x:Name="btnChange" Content="Clear Text" HorizontalAlignment="Left" Height="77" Margin="10,232,0,0" VerticalAlignment="Top" Width="497" Click="btnChange_Click"/>
        <Button x:Name="button" Content="Previous Text" HorizontalAlignment="Left" Height="87" Margin="10,140,0,0" VerticalAlignment="Top" Width="245" Click="button_Click"/>
        <Button x:Name="button1" Content="Next Text" HorizontalAlignment="Left" Height="87" Margin="261,140,0,0" VerticalAlignment="Top" Width="246" Click="button1_Click"/>
    </Grid>
</Window>
